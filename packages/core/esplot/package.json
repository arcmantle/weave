{
	"name": "@arcmantle/esplot",
	"version": "1.0.0",
	"description": "Experimental data visualization library with TypeScript API and native desktop viewer",
	"author": {
		"name": "Kristoffer Roen-Lie"
	},
	"type": "module",
	"types": "./dist/index.d.ts",
	"main": "./dist/index.js",
	"files": [
		"bin",
		"dist",
		"src",
		"package.json",
		"README.md"
	],
	"scripts": {
		"build": "rimraf dist bin && pnpm run --sequential \"/^build-.*/\"",
		"build-ts": "tsc --project ./src/tsconfig.json",
		"build-go-deps": "go mod download",
		"build-viewer-windows": "cd viewer && go build -o ../bin/esplotv-win32.exe -ldflags=\"-H windowsgui\" .",
		"build-viewer-macos": "cd viewer && go build -o ../bin/esplotv-arm64 ."
	},
	"exports": {
		".": "./dist/index.js"
	},
	"dependencies": {
		"chart.js": "^4.4.9",
		"chartjs-chart-wordcloud": "^4.4.4",
		"vite": "^7.0.0"
	}
}
